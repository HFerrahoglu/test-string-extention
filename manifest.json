{
  "manifest_version": 3,
  "name": "Test String Generator",
  "version": "1.0.0",
  "description": "A lightweight Chrome extension designed for test data generation and Turkish localization.",
  "icons": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    },
  "action": {
    "default_icon": {
      "128": "assets/icon128.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "clipboardRead",
    "clipboardWrite"
  ],
  "background": {
    "service_worker": "background.js"
  }
}